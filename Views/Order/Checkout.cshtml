@model List<AfaqMall.Models.Product>

<h2>Checkout (Demo)</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>$@item.Price</td>
                    <td>1</td>
                    <td>$@item.Price</td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Enter Your Details</h3>
    <form>
        <label>Full Name:</label><br />
        <input type="text" placeholder="Your Name" /><br /><br />

        <label>Phone Number:</label><br />
        <input type="text" placeholder="Phone" /><br /><br />

        <label>Address:</label><br />
        <input type="text" placeholder="Address" /><br /><br />

        <label>Payment Code:</label><br />
        <input type="text" placeholder="Sham Cash Code" /><br /><br />

        <button type="button">Confirm Order</button>
    </form>
}

<style>
table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 15px;
}

th, td {
    border: 1px solid #ccc;
    padding: 8px;
    text-align: center;
}

input {
    width: 300px;
    padding: 5px;
    margin-bottom: 10px;
}

button {
    padding: 7px 15px;
}
</style>

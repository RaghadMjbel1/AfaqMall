@model List<AfaqMall.Models.CartItem>

@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>$@item.Product.Price</td>
                    <td>@item.Quantity</td>
                    <td>$@(item.Product.Price * item.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Enter Your Details</h3>
    <form method="post" asp-controller="Order" asp-action="Confirm">
        <input type="hidden" name="userId" value="demoUser" />
        <label>Full Name:</label><br />
        <input type="text" name="fullName" required /><br /><br />

        <label>Phone Number:</label><br />
        <input type="text" name="phoneNumber" required /><br /><br />

        <label>Address:</label><br />
        <input type="text" name="address" required /><br /><br />

        <label>Payment Code (Sham Cash):</label><br />
        <input type="text" name="paymentCode" required /><br /><br />

        <button type="submit">Confirm Order</button>
    </form>
}

<style>
table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 15px;
}

th, td {
    border: 1px solid #ccc;
    padding: 8px;
    text-align: center;
}

input {
    width: 300px;
    padding: 5px;
    margin-bottom: 10px;
}

button {
    padding: 7px 15px;
}
</style>

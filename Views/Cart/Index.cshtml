@model List<AfaqMall.Models.Product>

<h2>Your Cart (Demo)</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>$@item.Price</td>
                    <td>1</td>
                    <td>$@item.Price</td>
                </tr>
            }
        </tbody>
    </table>

    <button>Proceed to Checkout</button>
}

<style>
table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 15px;
}

th, td {
    border: 1px solid #ccc;
    padding: 8px;
    text-align: center;
}

button {
    padding: 7px 15px;
    margin-top: 10px;
}
</style>
